<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gg.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.gg.movieapp.AndroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launch"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launch"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp">
        <activity
            android:name="com.gg.movieapp.ui.main.MainActivity"
            android:exported="true">

        </activity>

        <activity
            android:name="com.gg.movieapp.ui.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.gg.movieapp.ui.login.LoginActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>
